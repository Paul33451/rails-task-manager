<h1>My tasks</h1>
<ul>
  <% @tasks.each do |task| %>
  <li>
    <input type="checkbox" <%= "checked" if task.completed %>>
    <a> <%= link_to(task.title, task_path(task.id)) %></a>
    <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<a> <%= link_to "Add task", tasks_new_path %> </a>
